{
  "name": "ericdraken/messaging",
  "description": "Bundle of classes to send reports and messages to various API endpoints (e.g. Slack), including global error logging",
  "version": "0.0.1",
  "keywords": ["php", "message", "report", "logging", "slack"],
  "homepage": "http://github.com/ericdraken/messaging",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Eric Draken",
      "email": "github@ericdraken.com",
      "homepage": "https://ericdraken.com"
    }
  ],
  "require": {
    "php": "^7.0",
    "psr/log": "^1.0",
    "guzzlehttp/guzzle": "^6.3",
    "guzzlehttp/promises": "^1.0",
    "symfony/process": "^3.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "monolog/monolog": "^1.23"
  },
  "autoload": {
    "psr-4" : {
      "Draken\\Messaging\\" : "src/Messaging"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DrakenTest\\Messaging\\": "tests/Messaging"
    }
  }
}
